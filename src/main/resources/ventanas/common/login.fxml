<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="co.edu.uniquindio.Actually.controladores.LoginControlador"
            prefHeight="400.0" prefWidth="600.0" styleClass="root" stylesheets="@../../style.css">

    <VBox alignment="CENTER" spacing="15.0" layoutX="150.0" layoutY="40.0" styleClass="form-container">
        <Label text="Inicio de Sesión" styleClass="form-title"/>
        <TextField fx:id="idField" promptText="ID" styleClass="input-field"/>
        <PasswordField fx:id="contrasenaField" promptText="Contraseña" styleClass="input-field"/>
        <Button text="Ingresar" onAction="#ingresar" styleClass="submit-button"/>
        <Label fx:id="mensajeLabel" textFill="red" styleClass="error-message"/>
        <Hyperlink text="¿No tienes cuenta? Regístrate aquí" onAction="#irARegistro"/>
    </VBox>
</AnchorPane>
