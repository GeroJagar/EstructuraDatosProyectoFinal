<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.Reflection?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400" prefWidth="600" styleClass="backgroundGradient" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.Actually.controladores.ChangePasswordController">
   <children>
      <VBox alignment="CENTER" layoutX="73.0" layoutY="86.0" prefHeight="300.0" prefWidth="466.0" style="-fx-background-radius: 40; -fx-background-color: #f5f5f5;">
         <children>
            <HBox alignment="CENTER" spacing="10">
               <children>
                  <ImageView fx:id="iconoUsuario" fitHeight="41.0" fitWidth="41.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../images/userIcon.png" />
                     </image>
                  </ImageView>
                  <TextField fx:id="idField" prefHeight="25.0" prefWidth="635.0" promptText="Identificación..." styleClass="inputModerno">
                     <font>
                        <Font name="SansSerif Regular" size="18.0" />
                     </font>
                  </TextField>
               </children>
               <VBox.margin>
                  <Insets left="20.0" right="20.0" />
               </VBox.margin>
            </HBox>
            <HBox alignment="CENTER" spacing="10">
               <children>
                  <ImageView fx:id="iconoCandado" fitHeight="42.0" fitWidth="41.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../images/passwordIcon.png" />
                     </image>
                  </ImageView>
                  <PasswordField fx:id="newPasswordField" prefWidth="635.0" promptText="Nueva contraseña..." styleClass="inputModerno">
                     <font>
                        <Font name="SansSerif Regular" size="18.0" />
                     </font>
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </PasswordField>
               </children>
               <VBox.margin>
                  <Insets left="20.0" right="20.0" top="20.0" />
               </VBox.margin>
            </HBox>
            <Button fx:id="changePasswordButton" mnemonicParsing="false" onAction="#onChangeButtonClick" prefHeight="37.0" prefWidth="274.0" style="-fx-background-radius: 60;" styleClass="login-button" text="Cambiar La Contraseña">
               <font>
                  <Font name="SansSerif Bold" size="20.0" />
               </font>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
               <effect>
                  <Reflection />
               </effect>
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="changePasswordButton1" mnemonicParsing="false" onAction="#volverAlLogin" prefHeight="37.0" prefWidth="215.0" style="-fx-background-radius: 60;" styleClass="login-button" text="Volver al Login">
               <font>
                  <Font name="SansSerif Bold" size="20.0" />
               </font>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
               <effect>
                  <Reflection />
               </effect>
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </Button>
         </children></VBox>
   </children>
</AnchorPane>
