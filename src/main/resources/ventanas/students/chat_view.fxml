<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="co.edu.uniquindio.Actually.controladores.VistaChatController"
            prefWidth="600" prefHeight="480">

    <VBox spacing="10" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
          AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" prefWidth="600" prefHeight="480">

        <!-- Área de mensajes con scroll -->
        <ScrollPane fx:id="scrollPane" fitToWidth="true" VBox.vgrow="ALWAYS" prefHeight="440">
            <content>
                <VBox fx:id="contenedorMensajes" spacing="5">
                    <padding>
                        <Insets top="10" right="10" bottom="10" left="10"/>
                    </padding>
                </VBox>
            </content>
        </ScrollPane>

        <!-- Barra para escribir y enviar mensajes -->
        <HBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <TextField fx:id="campoMensaje" promptText="Escribe tu mensaje aquí..." HBox.hgrow="ALWAYS"/>
            <Button text="Enviar" onAction="#enviarMensaje"/>
        </HBox>
    </VBox>

</AnchorPane>
