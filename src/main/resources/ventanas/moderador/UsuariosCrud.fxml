<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane prefHeight="600" prefWidth="800" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.Actually.controladores.UsuarioCrudController">

    <!-- Tabla de Usuarios -->
    <TableView fx:id="tablaUsuarios" layoutX="20" layoutY="70" prefHeight="450" prefWidth="760">
        <columns>
            <TableColumn fx:id="colNombre" prefWidth="150" text="Nombre" />
            <TableColumn fx:id="colId" prefWidth="120" text="ID" />
            <TableColumn fx:id="colCorreo" prefWidth="200" text="Correo" />
            <TableColumn fx:id="colTipo" prefWidth="120" text="Tipo" />
            <TableColumn fx:id="colDetalle" prefWidth="150" text="Detalles" />
        </columns>
    </TableView>

    <!-- Barra de herramientas -->
    <HBox layoutX="20" layoutY="20" spacing="10">
        <ComboBox fx:id="cbTipoUsuario" promptText="Filtrar por tipo" />
        <TextField fx:id="txtBusqueda" prefWidth="300" promptText="Buscar..." />
        <Button fx:id="btnBuscar" text="Buscar" />
        <Button fx:id="btnLimpiar" text="Limpiar" />
    </HBox>

    <!-- Botones CRUD -->
    <HBox layoutX="20" layoutY="530" spacing="20">
        <Button fx:id="btnAgregar" prefWidth="100" text="Agregar" />
        <Button fx:id="btnEditar" prefWidth="100" text="Editar" />
        <Button fx:id="btnEliminar" prefWidth="100" text="Eliminar" />
    </HBox>
   <Button layoutX="706.0" layoutY="20.0" mnemonicParsing="false" text="Volver ðŸ˜€" />
</AnchorPane>
