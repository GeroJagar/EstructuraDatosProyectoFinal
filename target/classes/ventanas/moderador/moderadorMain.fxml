<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="co.edu.uniquindio.Actually.controladores.ModeradorMainController"
      style="-fx-background-color: #05242F;"
      alignment="CENTER" spacing="30"
      prefHeight="600" prefWidth="800">

    <!-- Encabezado con icono -->
    <HBox alignment="CENTER" spacing="15">
        <ImageView fitHeight="50" fitWidth="50">
            <image>
                <Image url="@../../images/ModeratorIcon.png"/>
            </image>
        </ImageView>
        <Text fx:id="titulo" text="Panel de Moderador" style="-fx-fill: white;">
            <font>
                <Font name="SansSerif Bold" size="28"/>
            </font>
        </Text>
    </HBox>

    <!-- Primera fila de botones -->
    <HBox alignment="CENTER" spacing="40">
        <Button fx:id="btnContenidos" text="Contenidos"
                styleClass="moderator-button"/>

        <Button fx:id="btnUsuarios" text="Usuarios"
                styleClass="moderator-button"/>
    </HBox>

    <!-- Segunda fila de botones -->
    <HBox alignment="CENTER" spacing="40">
        <Button fx:id="btnReportes" text="Reportes"
                styleClass="moderator-button"/>

        <Button fx:id="btnGrafos" text="Grafos"
                styleClass="moderator-button"/>
    </HBox>

    <!-- Botón inferior -->
    <Button fx:id="cerrarSesion" text="Cerrar Sesión"
            style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-weight: bold;
                  -fx-font-size: 16px; -fx-pref-width: 150; -fx-background-radius: 20;"/>
</VBox>