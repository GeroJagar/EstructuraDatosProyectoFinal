<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="co.edu.uniquindio.Actually.controladores.InicioControlador"
            prefHeight="400.0" prefWidth="600.0" styleClass="root" stylesheets="@../style.css">

    <VBox prefWidth="600.0" prefHeight="400.0" spacing="10.0">

        <!-- Header con botón de login -->
        <HBox alignment="TOP_RIGHT" spacing="10.0" styleClass="header-bar">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Button text="Login" onAction="#irAlLogin" styleClass="header-button"/>
        </HBox>

        <!-- Contenedor con scroll para los contenidos -->
        <ScrollPane fitToWidth="true" prefHeight="350.0">
            <VBox fx:id="contenedorContenido" spacing="10.0">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>
                <!-- Aquí se añadirán los contenidos -->
            </VBox>
        </ScrollPane>


    </VBox>
</AnchorPane>
